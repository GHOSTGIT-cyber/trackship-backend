# Configuration du serveur
PORT=3000
NODE_ENV=development

# Coordonnées de base (Tour Eiffel par défaut)
BASE_LAT=48.853229
BASE_LON=2.225328

# EuRIS API - Appel direct (sans proxy PHP)
EURIS_API_URL=https://www.eurisportal.eu/visuris/api/TracksV2/GetTracksByBBoxV2
EURIS_JWT_TOKEN=your_jwt_token_here

# Intervalle de vérification des navires (en millisecondes)
# 30000 = 30 secondes
CHECK_INTERVAL=30000

# Niveau de log (debug, info, warn, error)
LOG_LEVEL=info

# CORS Origins (séparés par des virgules)
# En développement : * pour autoriser toutes les origines
# En production : spécifier les domaines autorisés
CORS_ORIGINS=*

# Configuration optionnelle
# SHIP_MEMORY_DURATION=300000

# Firebase Admin SDK (pour notifications FCM natives Android/iOS)
# Nécessaire uniquement pour les APK/IPA compilées (pas pour Expo Go)
# Obtenir depuis Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
